@model IEnumerable<MVC1387.Models.Employee>

<h3>List of Emplyees</h3>

<p>Total Employees: @ViewBag.CountAll</p>
<p>Total Female Employees: @ViewBag.CountFemale</p>
<p>Total Male Employees: @ViewBag.CountMale</p>
<p>Average Salary: @ViewBag.AverageSalary.ToString("c2")</p>
<p>Average Salary Male: @ViewBag.AverageSalaryMale.ToString("c2")</p>
<p>Average Salary Female: @ViewBag.AverageSalaryFemale.ToString("c2")</p>

<table border="1" width="100%">
    <tr>
        <th>#</th>
        <th>Emp ID</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Position</th>
        <th>Start Date</th>
        <th>Campus</th>
        <th>Salary</th>
    </tr>
    @{
        int row = 1;
    } <!-- C# Statement in Razor Code Block -->
    @foreach (var employee in Model)
    {
        <tr>
            <td>@row</td>
            <td>@employee.EmpID</td>
            <td>@employee.Name</td>
            <td>@employee.Gender</td>
            <td>@employee.Position</td>
            <td>@employee.StartDate.ToShortDateString()</td>
            <td>@employee.Campus</td>
            <td>@employee.Salary.ToString("c")</td>
        </tr>
        row++;
    }
</table>
